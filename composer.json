{
    "name": "binkap/laraflash",
    "description": "Flash Session messages for Laravel and Livewire",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Binkap\\Laraflash\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Binkap S",
            "email": "real.desert.tiger@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "livewire/livewire": "^3.3"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Binkap\\Laraflash\\LaraflashServiceProvider"
            ],
            "aliases": {
                "Laraflash": "Binkap\\Laraflash\\LaraflashFacade"
            }
        }
    }
}
