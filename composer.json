{
    "name": "binkap/laraflash",
    "description": "Flash Session messages for Laravel and Livewire",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Binkap\\Laraflash\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Binkap S",
            "email": "real.desert.tiger@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "livewire/livewire": "^2.12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Binkap\\Laraflash\\LaraflashServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan vendor:publish --tag=laraflash--force"
        ]
    }
}
